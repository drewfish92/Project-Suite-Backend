# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/projectsuitepro

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-64-chars
JWT_EXPIRES_IN=7d

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_STARTER=price_starter_monthly
STRIPE_PRICE_PROFESSIONAL=price_professional_monthly
STRIPE_PRICE_ENTERPRISE=price_enterprise_monthly

# Email Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@projectsuitepro.com
SMTP_PASSWORD=your-gmail-app-password
SYSTEM_EMAIL=noreply@projectsuitepro.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Trial Configuration
TRIAL_DAYS=14

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# AWS S3 (Optional - for production file storage)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=projectsuitepro-files

# Logging
LOG_LEVEL=info

