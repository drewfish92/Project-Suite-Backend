// Prisma schema for Project Suite Pro with Supabase
// This schema is optimized to work with Supabase's built-in auth system

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Organization model - represents a company/business
model Organization {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  profiles     Profile[]
  subscription Subscription?
  projects     Project[]

  @@map("organizations")
}

// Profile model - extends Supabase auth.users with additional info
// Note: Supabase handles the core user authentication
model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id") // Links to Supabase auth.users
  name      String
  role      String   @default("user")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?       @map("organization_id")

  @@map("profiles")
}

// Subscription model - stores Stripe subscription data
model Subscription {
  id                   String    @id @default(uuid())
  stripeCustomerId     String?   @unique @map("stripe_customer_id")
  stripeSubscriptionId String?   @unique @map("stripe_subscription_id")
  stripePriceId        String?   @map("stripe_price_id")
  status               String    @default("inactive")
  plan                 String    // starter, professional, enterprise
  currentPeriodStart   DateTime? @map("current_period_start")
  currentPeriodEnd     DateTime? @map("current_period_end")
  cancelAtPeriodEnd    Boolean   @default(false) @map("cancel_at_period_end")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String       @unique @map("organization_id")

  @@map("subscriptions")
}

// Project model - for construction projects
model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  status      String   @default("active") // active, completed, archived
  startDate   DateTime? @map("start_date")
  endDate     DateTime? @map("end_date")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String       @map("organization_id")

  @@map("projects")
}
